<%= form_with(model: [@chat, @chat.messages.build], html: { data: { controller: 'message', action: 'turbo:submit-end->message#reset' } }) do |form| %>
  <div class="form-group">
    <%= form.text_area :content, class: 'form-control', placeholder: 'Enter your message here...' %>
  </div>
  <div class="form-group">
    <%= form.submit 'Send', class: 'btn btn-primary' %>
    <%= link_to 'Return', chats_path, class: 'btn btn-danger' %>
  </div>
<% end %>
